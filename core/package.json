{
  "name": "@erda-ui/core",
  "version": "1.0.0",
  "description": "Core functions for Erda UI",
  "main": "dist/index.js",
  "types": "index.d.ts",
  "private": true,
  "sideEffects": [
    "*.scss",
    "*.css",
    "*.less"
  ],
  "scripts": {
    "watch": "cross-env-shell NODE_ENV=development 'npm run clean && webpack --progress -w'",
    "dev-build": "cross-env-shell NODE_ENV=development 'npm run build-core'",
    "build": "cross-env-shell NODE_ENV=production 'npm run build-core'",
    "build-core": "npm run clean && webpack --progress",
    "analyze": "webpack --config webpack.analyze.js --progress --color",
    "clean": "rm -rf ../public/static/core",
    "lint-fix": "eslint --fix src --ext '.js,.jsx,.tsx,.ts,.d.ts'",
    "precommit": "lint-staged"
  },
  "author": "Erda-FE",
  "license": "AGPL",
  "dependencies": {
    "@terminus/nusi": "3.10.79",
    "antd": "4.15.6",
    "axios": "^0.21.1",
    "css-loader": "^5.0.1",
    "cube-state": "^1.5.6",
    "history": "4.x",
    "i18next": "^17.0.13",
    "immer": "^8.0.0",
    "less": "^3.8.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "path-to-regexp": "^6.2.0",
    "query-string": "^6.4.2",
    "react": "16.14.0",
    "react-dom": "16.14.0",
    "react-router-config": "^5.0.0",
    "react-router-dom": "^5.2.0",
    "sass-loader": "^10.1.1",
    "sockjs-client": "^1.1.5",
    "superagent": "^5.2.2",
    "superagent-use": "^0.1.0",
    "typescript": "^4.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.4",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@module-federation/automatic-vendor-federation": "^1.2.1",
    "@types/lodash": "^4.14.118",
    "@types/node": "^10.12.18",
    "@types/react": "^16.7.13",
    "@types/react-dom": "^16.0.11",
    "@types/react-router": "^4.4.1",
    "@types/react-router-config": "^1.1.3",
    "@types/react-router-dom": "^5.1.5",
    "@types/superagent": "^4.1.7",
    "@types/webpack": "^4.4.20",
    "autoprefixer": "^6.5.3",
    "babel-loader": "^8.2.2",
    "cross-env": "^5.2.0",
    "dotenv": "^8.2.0",
    "less-loader": "^7.2.1",
    "mini-css-extract-plugin": "^1.6.0",
    "sass": "^1.32.4",
    "speed-measure-webpack-plugin": "^1.5.0",
    "thread-loader": "^3.0.1",
    "webpack": "^5.38.1",
    "webpack-bundle-analyzer": "^4.3.0",
    "webpack-cli": "^4.4.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.7.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,scss,css,md}": "prettier --write"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ]
}
