    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNEXT",
    "outDir": "./dist",
    "baseUrl": "./",
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["./**/*.ts"]
}
